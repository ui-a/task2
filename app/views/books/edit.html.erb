<div class="flash">
  <%= flash[:notice] %>
</div>

<h1>Editing Book</h1>
<% if @book.errors.any? %>
<div class="error">
  <%= @book.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>


<%= form_with model: @book do |f| %>
<div class="field">
  Title<br>
  <%= f.text_field :title %>
</div>

<div class="area">
  Body<br>
  <%= f.text_area :body %>
</div>

<div class="action">
 <%= f.submit 'Update Book' %>
</div>

  <%= link_to "Show", book_path(@book.id) %> |
  <a href="/books">Back</a>

<% end %>